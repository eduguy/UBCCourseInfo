{
  "manifest_version": 2,
  "name": "Course Info",
  "version": "0.1",
  "permissions": [
    "tabs",
    "https://*/",
    "http://*/"
  ],
  "browser_action": {
    "default_title":"Course Info"
  },
  "content_scripts": [
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": ["jquery.js"]

    },
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}

