{
  "manifest_version": 3,
  "name": "Course Info",
  "version": "0.1",
  "permissions": [
    "tabs"
  ],
  "host_permissions":[
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": [
        "jquery.js"
      ]
    },
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}