{
  "manifest_version": 2,
  "name": "Course Info",
  "version": "0.1",
  "permissions": [
    "tabs",
    "https://*/",
    "http://*/"
  ],
  "page_action": {
    "default_title": "Course Info",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": [
        "jquery.js"
      ]
    },
    {
      "matches": [
        "*://courses.students.ubc.ca/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}